model UserToken {
  id        String   @id @default(uuid())
  token     String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  userId    String   @map("user_id")
	user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([updatedAt])
  @@map("user_tokens")
}
